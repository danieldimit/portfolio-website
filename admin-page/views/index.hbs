<h1>Toskov Architect - Admin interface</h1>
<section class="insert">
    <h3>Insert Hero Image</h3>
    <form class="fileupload" action="/insert-hero-image" method="post" enctype="multipart/form-data">
        <div class="input">
            <label for="title">Title</label>
            <input type="text" name="title">
        </div>
        <div class="input">
            <label for="buildingType">Subtitle</label>
            <input type="text" name="subtitle">
        </div>

        <p id="imgPanel">Images:
            <input type="file" name="upHero" value="">
        </p>
        <button type="submit">INSERT HERO IMAGE</button>
    </form>
</section>
<section class="get">
    <h3>Get Hero IMGs</h3>
    <a href="/get-hero-images">LOAD HERO IMGS</a>
    <div>
        {{# each heroes }}
            <article class="item">
                <div>Id: {{ this._id }}</div>
                <div>Title: {{ this.title }}</div>
                <div>SubTitle: {{ this.subtitle }}</div>
                <div>Image: <img src="{{ this.imgURL }}" style="width:304px;height:228px;"> </div>
            </article>
        {{/each}}
    </div>
</section>
<section class="delete">
    <h3>Delete Hero Image</h3>
    <form action="/delete-hero-image" method="post">
        <div class="input">
            <label for="id">ID</label>
            <input type="text" id="id" name="id">
        </div>
        <button type="submit">DELETE</button>
    </form>
</section>

