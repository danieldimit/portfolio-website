<section class="get">
    <h3>Get All Projects</h3>
    <a href="/get-data">LOAD DATA</a>
    <div>
        {{# each items }}
            <article class="item">
                <div>Title: {{ this.title }}</div>
                <div>Building Type: {{ this.buildingType }}</div>
                <div>Content: {{ this.content }}</div>
                <div>Works: {{ this.works }}</div>
                <div>Investor: {{ this.investor }}</div>
                <div>Year: {{ this.year }}</div>
                <div>Status: {{ this.status }}</div>
                <div>TGA: {{ this.tga }}</div>
            {{# each this.imgs }}
                <div>Image: <img src="{{ this.loc }}" style="width:304px;height:228px;"> </div>
            {{/each}}
                <div>ID: {{ this._id }}</div>
            </article>
        {{/each}}
    </div>
</section>
